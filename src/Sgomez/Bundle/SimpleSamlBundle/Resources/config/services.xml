<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="simple_saml.token_authenticator" class="Sgomez\Bundle\SimpleSamlBundle\Security\TokenAuthenticator">
            <argument type="service" id="simple_saml.auth"/>
            <argument type="service" id="router"/>
        </service>

        <service id="simple_saml.auth" class="Sgomez\Bundle\SimpleSamlBundle\Security\SimpleSamlAuth">
            <file>%simple_saml.autoload_path%</file>
            <argument>%simple_saml.authsource%</argument>
            <argument>%simple_saml.userid_attribute%</argument>
        </service>

    </services>

</container>
