<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="simplesaml_security_login" path="/login-simplesaml" methods="GET POST">
        <default key="_controller">SimpleSamlBundle:Security:connect</default>
    </route>

    <route id="simplesaml_security_check" path="/login_check" methods="GET POST">
        <default key="_controller">SimpleSamlBundle:Security:check</default>
    </route>

    <route id="simplesaml_security_logout" path="/logout" methods="GET">
        <default key="_controller">SimpleSamlBundle:Security:logout</default>
    </route>

</routes>