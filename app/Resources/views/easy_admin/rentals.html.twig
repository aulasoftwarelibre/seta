<table class="table">
    <thead>
        <tr>
            <th>{{ 'label.locker' | trans }}</th>
            <th>{{ 'label.owner' | trans }}</th>
            <th>{{ 'label.start_at' | trans }}</th>
            <th>{{ 'label.end_at' | trans }}</th>
            <th>{{ 'label.return_at' | trans }}</th>
            <th>{{ 'label.penalized' | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% set rentals = value | sort_rental %}
    {% for rental in rentals %}
        <tr>
            <td>{{ rental.locker }}</td>
            <td>{{ rental.user }}</td>
            <td>{{ rental.startAt | date('d/m/Y') }}</td>
            <td>{{ rental.endAt | date('d/m/Y') }}</td>
            <td>
            {% if rental.returnAt %}
                {{ rental.returnAt | date('d/m/Y') }}
            {% endif %}
            </td>
            {% if rental.penalty %}
            <td><span class="label label-danger">SÍ</span> </td>
            {% else %}
            <td><span class="label label-success">NO</span> </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
    <tfeet>
        <tr>
            <td colspan="6">Solo se muestran los diez últimos alquileres</td>
        </tr>
    </tfeet>
</table>